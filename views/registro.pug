extends layout

block content

    br

    div.container
        .row
            .col.l2.offset-l5.s4.offset-s4
                img.responsive-img(src="images/logo.png" alt="")
        .row
            .col.l4.offset-l4.center.s12
                p.flow-text(tabindex="0") Academia Lagunensis
                p.flow-text(tabindex="0") Registro
        .row
            form.col.l6.offset-l3.s12
                .row
                    .input-field.col.l6.s12
                        input#first_name.validate(placeholder="Nombre" type="text" required)
                        label(for="first_name") Nombre
                    .input-field.col.l6.s12
                        input#last_name.validate(placeholder="Apellidos" type="text" required)
                        label(for="last_name") Apellidos
                .row
                    .input-field.col.l12.s12
                        input#email.validate(placeholder="Email" type="email" required)
                        label(for="email") Email
                .row
                    .input-field.col.l12.s12
                        input#password.validate(placeholder="Contraseña" type="password" required)
                        label(for="password") Contraseña
                .row
                    .col.l6.offset-l3.xl4.offset-xl4.offset-s3
                        button#register.btn.waves-effect.waves-light.purple.darken-2(name="action")
                            | Enviar
                            i.material-icons.right send

        .row.red-text.text-accent-4
            p.flow-text.center-align#errorMessage(hidden tabindex="0" aria-live="polite")
