extends layout

block content

    br

    div.container
        .row
            .col.l2.offset-l5.s4.offset-s4
                img.responsive-img(src="images/logo.png" alt="")
        .row
            .col.l4.offset-l4.center.s12
                p.flow-text(tabindex="0") Academia Lagunensis
                p.flow-text(tabindex="0") Iniciar Sesión
        .row
            form.col.l6.offset-l3.s12.m12
                .row
                    .input-field.col.s12
                        input#email.validate(placeholder="Email" type="email")
                        label(for="email") Email
                .row
                    .input-field.col.s12
                        input#password.validate(placeholder="Contraseña" type="password")
                        label(for="password") Contraseña
                .row
                    .col.l6.offset-l3.xl4.offset-xl4.offset-s3
                        button#login.btn.waves-effect.waves-light.purple.darken-2(type="submit" name="action") Enviar
                            i.material-icons.right send


        .row.red-text.text-accent-4
            p.flow-text.center-align#errorMessage(hidden tabindex="0" aria-live="polite")
